datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  firstName String
  lastName  String
  password  String
  role      String     @default("customer")
  accountBalance Float @default(0)
}

model Destination {
  id        Int     @id @default(autoincrement())
  name      String
  address   String?
  phone     String?
  notes     String?
}

model Restaurant {
  id        Int     @id @default(autoincrement())
  name      String
  address   String?
  phone     String?
  notes     String?
  foods     Food[]
}

model Food {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  category    String
  restaurant  Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
}